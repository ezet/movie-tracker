<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/text_margin"
    android:layout_marginBottom="@dimen/text_margin"
    android:paddingLeft="@dimen/trailer_spacing"
    android:paddingStart="@dimen/trailer_spacing"
    android:paddingEnd="@dimen/trailer_spacing"
    android:paddingRight="@dimen/trailer_spacing"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/trailer_thumbnail"
        android:layout_width="@dimen/trailer_width"
        android:layout_height="@dimen/trailer_height"
        android:scaleType="centerCrop"
        android:contentDescription="@string/cdesc_trailer_thumbnail" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_play_circle_outline_black_24dp"
        android:contentDescription="@string/cdesc_play_button_icon" />

</FrameLayout>